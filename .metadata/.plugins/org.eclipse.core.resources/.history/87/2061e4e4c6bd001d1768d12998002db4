#ifndef __HANDLE_H
#define __HANDLE_H

#ifdef __cplusplus
extern "C" {
#endif

#include "stm32f1xx_hal.h"

typedef uint16_t handle_err_t;
#define HANDLE_OK 0
#define HANDLE_RX_UART_NOT_FOUND_CMD 0x101
#define HANDLE_ERR_UART_DMA 0x102

#define RX_DATA_SIZE 50

#define NUMBER_LEVELS 4
#define REQUEST_COMMAND_NUMBERS 4
#define SET_MODE "SM"
#define SET_TEMPERATURE_LEVEL "STL"
#define SET_HUMIDITY_LEVEL "SHL"
#define SET_MOTOR_SPEED "SS"

#ifdef __cplusplus
}
#endif

#endif /* __HANDLE_H */
