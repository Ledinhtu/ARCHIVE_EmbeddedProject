#ifndef __DHT_H
#define __DHT_H

#ifdef __cplusplus
extern "C" {
#endif

#include "stm32f1xx_hal.h"

typedef int dht_err_t;
#define DHT_OK 0
#define DHT_ERR_TIMEOUT 0x101
#define DHT_ERR_INVALID_CRC 0x102
#define DHT_ERR_PHASE_B 0x103
#define DHT_ERR_PHASE_C 0x104
#define DHT_ERR_PHASE_D 0x105
#define DHT_ERR_LBIT_TIMEOUT 0x106
#define DHT_ERR_HBIT_TIMEOUT 0x107

typedef struct
{
//	uint8_t Respone;
//	uint16_t Type;
//	uint32_t duration;
	TIM_HandleTypeDef* Timer;
	uint16_t Pin;
	GPIO_TypeDef* Port;
	float Temp;
	float Humi;
}DHT_HandleTypeDef;

#ifdef __cplusplus
}
#endif

#endif /* __DHT_H */
